{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python"
    },
    {
      "src": "start.sh",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.py"
    }
  ],
  "env": {
    "FLASK_APP": "app",
    "FLASK_ENV": "production"
  },
  "installCommand": "pip install pymongo, pymongo[srv], flask, gunicorn"
}